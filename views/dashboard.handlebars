{{#if loggedIn}}
<div class="col-auto">
    <h2>Welcome, {{username}}</h2>
</div>
{{!-- create a new blog form --}}
{{> create-blog}}
{{!-- if user has written posts, show post details below --}}
{{#if blogPosts.length}}
<script src="/js/delBlog.js"></script>
<script src="/js/updateBlog.js"></script>
{{#each blogPosts as |blogPost|}}
{{> user-blog-details}}
{{/each}}
{{/if}}
{{else}}
{{!-- if user not logged in, redirect to login page --}}
<a class="nav-link" href="/login">Login or Sign Up to view your Dashboard</a>
{{/if}}
<script src="/js/createBlog.js"></script>