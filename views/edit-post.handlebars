<form class="update-blog">
    <div class="mb-3">
    <label for="blog" class="form-label">Update Blog Post</label>
    <input type="text" class="form-control" id="update-title" aria-describedby="blog-title" value="{{title}}" >
    </div>
    <div class="mb-3">
    <textarea class="form-control" id="update-text" rows="3">{{content}}</textarea>
    </div>
    <button type="submit" class="btn btn-primary" id="createBtn" data-id="{{id}}">Update Blog</button>
    <button id="deleteBtn" data-id="{{id}}" class="btn btn-secondary">Delete blog post</button>
</form>
<script src="/js/delBlog.js"></script>
<script src="/js/updateBlog.js"></script>